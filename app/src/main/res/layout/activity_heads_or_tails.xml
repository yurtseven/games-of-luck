<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeadsOrTails.HeadsOrTails">

    <ImageView
        android:id="@+id/coinImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:onClick="clickCoin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_coin" />

    <TextView
        android:id="@+id/headsOrTailsResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/click_the_coin"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/coinImage"
        app:layout_constraintStart_toStartOf="@+id/coinImage"
        app:layout_constraintTop_toBottomOf="@+id/coinImage" />
</androidx.constraintlayout.widget.ConstraintLayout>